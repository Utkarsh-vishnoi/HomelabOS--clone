[Unit]
Description=HomelabOS docs Service
After=docker.service
Requires=docker.service

[Service]
User={{ homelab_ssh_user }}
Group={{ homelab_ssh_user }}
TimeoutStartSec=infinity
TimeoutStopSec=5min
Restart=always
RestartSec=3
WorkingDirectory={{ volumes_root }}/docs/

ExecStart=/usr/bin/docker-compose -p docs up
ExecStop=/usr/bin/docker-compose -p docs down

[Install]
WantedBy=multi-user.target
